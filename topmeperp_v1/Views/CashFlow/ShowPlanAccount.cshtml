
@model IEnumerable<topmeperp.Models.PlanAccountFunction>
<div class="container">
    <button class="btn-xs" type="button" onclick="switchDivQuery()">
        <span class="glyphicon glyphicon-menu-up"></span>
    </button>
    <div class="row" style="padding-top:5px;">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        修改
                    </th>
                    <th>專案名稱</th>
                    <th>支付日期</th>
                    <th>應收(付)金額</th>
                    <th>實收(付)金額</th>
                    <th>帳款類型</th>
                    <th>受款人</th>
                    <th>支票號碼</th>
                    <th>備註</th>
                    <th>入帳與否</th>
                </tr>
            </thead>
            <tbody>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            <button type="button" class="btn btn-default btn-xs" onclick="getPlanAccountItem('@item.PLAN_ACCOUNT_ID')">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                        </td>
                        <td>@item.PROJECT_NAME</td>
                        <td>@item.RECORDED_DATE</td>
                        <td>@String.Format("{0:#,##0.#}", item.AMOUNT_PAYABLE)</td>
                        <td>@String.Format("{0:#,##0.#}", item.AMOUNT_PAID)</td>
                        @if (item.ACCOUNT_TYPE == "R")
                        {
                            <td>業主帳款</td>
                        }
                        else
                        {
                            <td>廠商帳款</td>
                        }
                        <td>@item.PAYEE</td>
                        <td>@item.CHECK_NO</td>
                        <td>@item.REMARK</td>
                        @if (item.STATUS == 10)
                        {
                            <td>是</td>
                        }
                        else
                        {
                            <td><span style="color: red; font-size: 15px;">否</span></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

