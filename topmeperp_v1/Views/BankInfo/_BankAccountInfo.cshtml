<!-- Modal content-->
<div class="modal-content">
    <form id="formAddBankAccunt" name="formAddBankAccunt" action="addBankAccunt" method="post">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">銀行帳戶資料</h4>
        </div>
        <div class="modal-body form-group">
            <input type="hidden" id="project_id" name="project_id" value="@ViewBag.id" />
            <div class="row form-group"><div class="col-md-4">No</div><div class="col-md-8"><input type="text" id="BANK_ACCOUNT_ID" name="BANK_ACCOUNT_ID" class="form-control" readonly /></div></div>
            <div class="row form-group"><div class="col-md-4">銀行代號</div><div class="col-md-8"><input type="text" id="BANK_ID" name="BANK_ID" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-sm-4">銀行名稱</div><div class="col-md-8"><input type="text" id="BANK_NAME" name="BANK_NAME" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">分行名稱</div><div class="col-md-8"><input type="text" id="BRANCH_NAME" name="BRANCH_NAME" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">帳戶名稱</div><div class="col-md-8"><input type="text" id="ACCOUNT_NAME" name="ACCOUNT_NAME" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">帳號</div><div class="col-md-8"><input type="text" id="ACCOUNT_NO" name="ACCOUNT_NO" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">現額</div><div class="col-md-8"><input type="text" id="CUR_AMOUNT" name="CUR_AMOUNT" class="form-control" /></div></div>
            <div class="row form-group">
                <div class="col-md-4">日期</div>
                <div class="col-md-8">
                    <div id="datetimepicker1" class="input-append date">
                        <input data-format="yyyy/MM/dd" type="text" id="CUR_DATE" name="CUR_DATE" class="form-control" />
                        <span class="add-on"><i data-time-icon="icon-time" data-date-icon="icon-calendar"></i></span>
                    </div>
                </div>
            </div>


        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">關閉</button>
            <button type="submit" class="btn btn-default" data-dismiss="modal" id="submit">儲存</button>
            <input type="hidden" name="flag" id="flag" value="" />
        </div>
    </form>
</div>