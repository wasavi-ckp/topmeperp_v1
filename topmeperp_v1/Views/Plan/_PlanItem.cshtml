<!-- Modal content-->
<div class="modal-content">
    <form id="formPlanItem" name="formPlanItem" action="addPlanItem" method="post">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">標單品項資料</h4>
        </div>
        <div class="modal-body form-group">
            <input type="hidden" id="project_id" name="project_id" value="@ViewBag.id" />
            <div class="row form-group"><div class="col-md-4">No</div><div class="col-md-8"><input type="text" id="plan_item_id" name="plan_item_id" class="form-control" readonly /></div></div>
            <div class="row form-group"><div class="col-md-4">項次</div><div class="col-md-8"><input type="text" id="item_id" name="item_id" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-sm-4">品項名稱</div><div class="col-md-8"><input type="text" id="item_desc" name="item_desc" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">單位</div><div class="col-md-8"><input type="text" id="item_unit" name="item_unit" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">標單數量</div><div class="col-md-8"><input type="text" id="item_quantity" name="item_quantity" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">採購數量</div><div class="col-md-8"><input type="text" id="map_qty" name="map_qty" class="form-control" readonly/></div></div>
            <div class="row form-group"><div class="col-md-4">單價</div><div class="col-md-8"><input type="text" id="item_unit_cost" name="item_unit_cost" class="form-control" readonly /></div></div>
            <div id="price2owner" class="row form-group"><div class="col-md-4">業主報價</div><div class="col-md-8"><input type="text" id="item_unit_price" name="item_unit_price" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">備註</div><div class="col-md-8"><input type="text" id="item_remark" name="item_remark" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">九宮格</div><div class="col-md-8"><input type="text" id="type_code_1" name="type_code_1" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">次九宮格</div><div class="col-md-8"><input type="text" id="type_code_2" name="type_code_2" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">主系統</div><div class="col-md-8"><input type="text" id="system_main" name="system_main" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">次系統</div><div class="col-md-8"><input type="text" id="system_sub" name="system_sub" class="form-control" /></div></div>
            <div class="row form-group"><div class="col-md-4">Excel行</div><div class="col-md-8"><input type="text" id="excel_row_id" name="excel_row_id" class="form-control" readonly /></div></div>
            <div class="row form-group">
                <div class="col-md-2">刪除</div>
                <div class="col-md-3">
                    <select id="selDelFlag" name="selDelFlag">
                        <option value="N" selected>否</option>
                        <option value="Y">是</option>
                    </select>
                </div>
                <div class="col-md-3">合約內品項</div>
                <div class="col-md-4">
                    <select id="inContractFlag" name="inContractFlag">
                        <option value="Y" selected>是</option>
                        <option value="N">否</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">關閉</button>
            <button type="submit" class="btn btn-default" data-dismiss="modal" id="savePlanItem">儲存</button>
            <input type="hidden" name="flag" id="flag" value="" />
        </div>
    </form>
</div>

